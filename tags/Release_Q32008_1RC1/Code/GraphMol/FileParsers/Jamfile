  /RDKit//RDGeneral /RDKit//Geometry /RDKit//lapacklibs ;

exe testTplParser : testTpls.cpp FileParsers 
  ../SmilesParse//SmilesParse ..//GraphMol 
  /RDKit//RDGeneral /RDKit//Geometry /RDKit//lapacklibs ;

install regrs : test1 testMolSupplier testMolWriter testTplParser
  : <location>testExecs ;




