project GraphMol : : ;
import os ;
local RDBASE = [ os.environ RDBASE ] ;


lib GraphMol : Atom.cpp QueryAtom.cpp QueryBond.cpp Bond.cpp MolOps.cpp FindRings.cpp ROMol.cpp RWMol.cpp
  PeriodicTable.cpp atomic_data.cpp QueryOps.cpp MolPickler.cpp Canon.cpp AtomIterators.cpp
  BondIterators.cpp Aromaticity.cpp Kekulize.cpp MolDiscriminators.cpp ConjugHybrid.cpp AddHs.cpp
  RankAtoms.cpp Matrices.cpp Chirality.cpp RingInfo.cpp Conformer.cpp
  : ;

exe test1 : test1.cpp GraphMol /RDKit//RDGeneral /RDKit//Geometry /RDKit//lapacklibs ;
exe cptest : cptest.cpp GraphMol /RDKit//RDGeneral /RDKit//Geometry /RDKit//lapacklibs ;
exe querytest : querytest.cpp GraphMol /RDKit//RDGeneral /RDKit//Geometry /RDKit//lapacklibs ;
#exe MolOpsTest : molopstest.cpp GraphMol /RDKit//GraphMol/FileParsers /RDKit//RDGeneral /RDKit//Geometry /RDKit//lapacklibs ;
#exe itertest : itertest.cpp GraphMol /RDKit//RDGeneral /RDKit//Geometry /RDKit//lapacklibs ;

install regrs : test1 cptest querytest MolOpsTest itertest
  : <location>testExecs ;
install lib-install : GraphMol : <location>$(RDBASE)/bin ;



