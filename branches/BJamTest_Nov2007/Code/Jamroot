import os ;
local BOOSTHOME = [ os.environ BOOSTHOME ] ;
local BOOSTBASE = [ os.environ BOOSTBASE ] ;
local GCCVERSION = [ os.environ GCCVERSION ] ;
local PYTHON_ROOT = [ os.environ PYTHON_ROOT ] ;
local PYTHON_VERSION = [ os.environ PYTHON_VERSION ] ;
local RDBASE = [ os.environ RDBASE ] ;


# make sure all executables end in .exe:
import type : change-generated-target-suffix ;
type.change-generated-target-suffix EXE : : exe ;


# Specify the path to the Boost project.
use-project boost 
  : /usr/local/src/boost_1_34_1 ;


project RDKit
	: requirements <include>.  <threading>multi
          <library>/boost/log//boost_log
          <include>$(RDBASE)/External/Lapack++/include
        : default-build release ;

lib lapack++
  :
  : <name>lapack++ <search>$(RDBASE)/External/Lapack++
  : <include>$(RDBASE)/External/Lapack++/include
  ;
lib lamatrix++
  :
  : <name>lamatrix++ <search>$(RDBASE)/External/Lapack++
  : <include>$(RDBASE)/External/Lapack++/include
  ;
lib blas++
  :
  : <name>blas++ <search>$(RDBASE)/External/Lapack++
  : <include>$(RDBASE)/External/Lapack++/include
  ;
lib lapack
  :
  : <name>lapack 
  :
  ;
lib blas
  :
  : <name>blas
  :
  ;
alias lapacklibs : lapack++ lamatrix++ blas++ lapack blas ;
