project boost/log;
     : requirements 
		<include>$(BOOST_ROOT) 
	    <link>static
	    <link>shared:<define>BOOST_LOG_SOURCE
	 : usage-requirements
        <link>shared:<define>BOOST_DATE_TIME_DYN_LINK=1
     : source-location ../src
     ;

LOG_SOURCES = functions log log_manager ;

lib boost_log : ../src/$(LOG_SOURCES).cpp ;

