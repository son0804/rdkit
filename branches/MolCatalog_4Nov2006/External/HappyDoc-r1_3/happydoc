    #
    'author'       : '$Author: glandrum $',
    'version'      : '$Revision: 1.1 $',
    'date'         : '$Date: 2002/06/29 14:20:09 $',
}

from happydoc_class import HappyDoc

if __name__ == '__main__':
    try:
        HappyDoc().run()
    except HappyDoc.HelpRequested:
        pass

    
