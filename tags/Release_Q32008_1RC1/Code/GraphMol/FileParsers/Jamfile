project GraphMol/FileParsers : : ;
import os ;
local RDBASE = [ os.environ RDBASE ] ;


lib FileParsers : MolFileParser.cpp MolFileStereochem.cpp MolFileWriter.cpp 
  SDFileParser.cpp SDMolSupplier.cpp SmilesMolSupplier.cpp 
  SmilesWriter.cpp SDWriter.cpp TDTWriter.cpp TDTMolSupplier.cpp 
