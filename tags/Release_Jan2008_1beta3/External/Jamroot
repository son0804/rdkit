import os ;
local BOOSTHOME = [ os.environ BOOSTHOME ] ;
local BOOSTBASE = [ os.environ BOOSTBASE ] ;
local GCCVERSION = [ os.environ GCCVERSION ] ;
local PYTHON_ROOT = [ os.environ PYTHON_ROOT ] ;
local PYTHON_VERSION = [ os.environ PYTHON_VERSION ] ;
local RDBASE = [ os.environ RDBASE ] ;

# Specify the path to the Boost project.
use-project boost 
  : /usr/local/src/boost_1_34_1 ;

use-project RDKit 
  : $(RDBASE)/Code ;


project RDKit_Externals
	: requirements <include>.  <threading>multi
          <library>/boost/log//boost_log
          <include>$(RDBASE)/Code
        : default-build release ;

alias vflib : vflib-2.0 ;
alias cmim : cmim-1.0 ;

alias all-libraries : vflib cmim Lapack++ ;


